source 'http://ruby.taobao.org/'

gem 'rails'
gem 'bootstrap-sass', '2.0.0'
gem 'bcrypt-ruby', '3.0.1'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'annotate'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'rspec-rails'
  gem 'capybara', '1.1.2'
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork'
end

